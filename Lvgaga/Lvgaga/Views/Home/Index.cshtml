@using LvModel.Common
@using LvService.Utilities
@model LvModel.View.Tumblr.TumblrsModel
@{
    ViewBag.Title = "首页";
}

<div id="div_content" class="g-doc">

</div>

@section scripts
{
    @Scripts.Render("~/bundles/home")
    <!--React-->
    <script src="@Url.Content("~/Scripts/lv.tumblr.jsx")"></script>
    <!--React end-->

    <script>
        (function() {
            "use strict";
            var dataContext = @Html.Raw(Model.ToJsonString());
            dataContext.tableNameOfFavorite = "@LvConstants.TableNameOfFavorite";
            dataContext.tableNameOfTumblr = "@LvConstants.TableNameOfTumblr";
            dataContext.tableNameOfComment = "@LvConstants.TableNameOfComment";

            lv.tumblr.initialize(dataContext);
        })();
    </script>
}
